{
    "env": {
        "es2021": true
    },
    "extends": ["plugin:react/recommended","airbnb", "airbnb/hooks", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "react/prop-types": "off",
        "react/jsx-props-no-spreading": "off",
        "react/no-unstable-nested-components": "off",
        "import/no-unresolved": [
            "error",
            {
              "ignore": ["^@env$"]
            }
          ]
    }
}
